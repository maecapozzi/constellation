{
  "compilerOptions": {
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "target": "es2017",
    "composite": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["./packages/**/*"],
  "exclude": ["./node_modules"]
}
