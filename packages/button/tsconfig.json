{
  "compilerOptions": {
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2017",
    "composite": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["./src/*"],
  "exclude": ["./node_modules"]
}
